{
  "name": "sparchive",
  "productName": "spARCHIVE",
  "homepage": "./",
  "main": "public/electron.js",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "adm-zip": "^0.5.16",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^9.0.0",
    "lucide-react": "^0.536.0",
    "python-shell": "^5.0.0",
    "react": "^18.2.0",
    "react-data-grid": "^7.0.0-beta.44",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"npm run electron-start\"",
    "react-start": "react-scripts start",
    "electron-start": "electron .",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "npm run build-python",
    "build-python": "./packager/venv/bin/pyinstaller --noconfirm --onefile --distpath ./resources/bin --name packager --hidden-import=openpyxl --hidden-import=pkg_resources scripts/packager.py",
    "dist": "npm run build && npm run build-python && electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.sparchive.app",
    "productName": "spARCHIVE",
    "extraResources": [
      {
        "from": "./resources/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "public/icon.icns",
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "win": {
      "icon": "public/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
